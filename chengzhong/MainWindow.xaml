<Window x:Class="chengzhong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chengzhong"
        mc:Ignorable="d"
            xmlns:usercontrols="clr-namespace:chengzhong.UserControls"
        Title="称重控制系统" Height="800" Width="1200" Loaded="Window_Loaded"  Closing="Window_Closing_1" >
    <Grid>
        <Frame x:Name="frame"   NavigationUIVisibility="Hidden" HorizontalAlignment="Center"  Margin="200,0,0,0" Width="1000" />
        <Button x:Name="button_auto" Content="自动" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" Height="60" Width="190" Click="button_auto_Click" />
        <Button x:Name="button_manul" Content="手动" HorizontalAlignment="Left" Margin="5,120,0,0" VerticalAlignment="Top" Height="60" Width="190" Click="button_manul_Click"/>
        <Button x:Name="button_report" Content="报表" HorizontalAlignment="Left" Margin="5,200,0,0" VerticalAlignment="Top" Height="60" Width="190" Click="button_report_Click"/>
    </Grid>
</Window>
